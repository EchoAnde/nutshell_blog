
@{
    ViewBag.Title = "添加收藏- 果壳园";
}
@model Nutshell.Blog.Model.Article

@section style{
    <style>
        .main-content {
            width: 415px;
            height: 315px;
            border: 1px solid #e0e0e0;
            background: #F6F6F6;
            margin: 0px auto;
            padding: 8px 10px;
        }

        .content-header {
            height: 50px;
            border-bottom: 1px solid #e6e6e6;
        }

        .content-panel table {
            font-size: 12px;
            width: 100%;
        }

        #txtUrl, #txtTitle {
            width: 267px;
            border: 1px solid #aaa;
            padding: 2px;
        }

        #txtUrl {
            color: #666699;
        }

        .content-panel .error {
            color: #c41313;
        }

        .isAdded {
            font-size: 12px;
            text-align: center;
        }

            .isAdded p {
                color: #018101;
                line-height: 6.5em;
            }

            .isAdded a {
                margin-right: 5px;
            }
    </style>
}
<form>
    <input type="hidden" value="@Model.Article_Id" id="txtArticle_Id" />
    <div class="main-content">
        <div class="content-header">

        </div>
        <div class="content-panel">
            <table cellspacing="7">
                <tr>
                    <td width="40px">
                        网址：
                    </td>
                    <td>
                        <input type="text" value="@Request.Url.Host/@Model.Author.Login_Name/p/@(Model.Article_Id).html" id="txtUrl" />
                        <span class="error" id="msg_url">* </span>
                    </td>
                </tr>
                <tr>
                    <td width="40px">
                        标题：
                    </td>
                    <td>
                        <input type="text" value="@Model.Title" id="txtTitle" />
                        <span class="error" id="msg_title">* </span>
                    </td>
                </tr>
                <tr>
                    <td width="40px">
                        摘要：
                    </td>
                    <td>
                        <textarea id="txtSummary"></textarea>
                    </td>
                </tr>
                <tr>
                    <td width="40px"></td>
                    <td>
                        <input type="button" value="收藏" id="btnSubmit" onclick="addFavorite();" />
                        <input type="button" value="取消" onclick="colse(); return false;"/>
                    </td>
                </tr>
            </table>
        </div>
        <div class="isAdded" style="display:none">
            <p>该文章已经收藏过了</p>
            <a href="#" onclick="colse(); return false;">关闭</a>
            <a href="#" onclick="myfavorites(); return false;">查看我的收藏</a>
        </div>
    </div>
</form>
@section script{
    <script>
        $(function () {
            @if ((bool)(ViewBag.Added ?? false))
             {
                 @("added();")
             }
        });

        function added() {
            $(".content-panel").hide();
            $(".isAdded").show();
        }

        function addFavorite() {
            var articleId = $("#txtArticle_Id").val();
            var url = $("#txtUrl").val();
            var title = $("#txtTitle").val();
            var remark = $("#txtSummary").val();
            if (articleId && articleId != "" && url.length > 0 && title.length > 0) {
                $.post('/favorite/PostFavorite', { Article_Id: articleId, Url : url, Title: title, Remark: remark }, function (data) {
                    console.log(data);
                    if (data.code == 0) {
                        added();
                    }
                });
            }
        }

        function colse() {
            var index = parent.layer.getFrameIndex(window.name);
            parent.layer.close(index);
        }

        function myfavorites() {
            parent.location = '/user/favorite';
            colse();
        }
    </script>
}